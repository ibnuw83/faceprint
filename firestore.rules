
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
  	function isEmployee() {
    	return request.auth != null && request.auth.token.role == 'employee';
    }
    
    function isAdmin() {
    	return request.auth != null && request.auth.token.role == 'admin';
    }

    match /users/{userId} {
      allow read, update: if request.auth.uid == userId || isAdmin();
      allow create, delete: if isAdmin();
    }
    
    match /departments/{departmentId} {
      allow get, list: if request.auth != null;
      allow create, update, delete: if isAdmin();
    }
    
    match /settings/{settingId} {
      allow get, list: if request.auth != null;
      allow create, update, delete: if isAdmin();
    }
    
    match /attendance/{attendanceId} {
      allow create: if isEmployee();
      allow read: if request.auth.uid == resource.data.uid || isAdmin();
      // Admins can list all, employees can only list their own.
      // The security is enforced by the query in the app code.
      allow list, get: if isEmployee() || isAdmin();
      allow update, delete: if isAdmin();
    }
    
    match /leaveRequests/{requestId} {
      allow create: if isEmployee();
      allow read: if isAdmin() || request.auth.uid == resource.data.uid;
      allow list: if isAdmin() || (isEmployee() && request.query.where.uid == request.auth.uid);
      allow update, delete: if isAdmin();
    }
  }
}

    