rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin role
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Helper function to check if the user is the owner of the document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // ===================
    //  Admin Full Access
    // ===================
    // Admins can read and write all data collections for management purposes.
    match /users/{userId} {
      allow read, write: if isAdmin();
    }
    match /departments/{deptId} {
      allow read, write: if isAdmin();
    }
    match /attendance/{attId} {
       allow read, write: if isAdmin();
    }
    match /leaveRequests/{reqId} {
       allow read, write: if isAdmin();
    }
     match /settings/{docId} {
      allow read, write: if isAdmin();
    }

    // ========================
    //  Authenticated Users
    // ========================
    // Users can read/update their own profile, but not change their role.
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow update: if isOwner(userId) && request.resource.data.role == resource.data.role;
    }
    
    // Users can create attendance records for themselves.
    match /attendance/{attId} {
      allow create: if isOwner(request.resource.data.uid);
      allow read: if request.auth.uid == resource.data.uid;
    }

    // Users can manage their own leave requests.
    match /leaveRequests/{reqId} {
      allow create, read, update: if isOwner(request.resource.data.uid);
      // Admin can also delete, covered by rule above
    }

    // ========================
    //  Public Access Rules
    // ========================
    // Any user (including unauthenticated ones) can read settings.
    // This is necessary for the login and main landing pages to function.
    // This rule is evaluated separately and does not override the admin write access rule above.
    match /settings/{document=**} {
      allow get, list: if true;
    }
  }
}
