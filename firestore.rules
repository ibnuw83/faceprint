rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check if a user is an admin
    function isAdmin(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role == 'admin';
    }

    // Users collection
    match /users/{userId} {
      allow read: if request.auth != null && (isAdmin(request.auth.uid) || request.auth.uid == userId);
      allow update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
      allow delete: if false; // Deletions should be handled by server-side logic
    }
    
    // Departments collection
    match /departments/{departmentId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && isAdmin(request.auth.uid);
    }
    
    // Settings collection
    match /settings/{settingId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && isAdmin(request.auth.uid);
    }

    // Attendance collection
    match /attendance/{attendanceId} {
      allow create: if request.auth != null && request.resource.data.employeeId == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.employeeId;
      allow read: if request.auth != null && (isAdmin(request.auth.uid) || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.employeeId == resource.data.employeeId);
      allow update: if false; // Records should be immutable
      allow delete: if request.auth != null && isAdmin(request.auth.uid);
    }

    // Leave Requests collection
    match /leaveRequests/{requestId} {
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
      allow read: if request.auth != null && (isAdmin(request.auth.uid) || resource.data.uid == request.auth.uid);
      allow update: if request.auth != null && (isAdmin(request.auth.uid) || (request.resource.data.uid == request.auth.uid && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['acknowledgedByEmployee'])));
      allow delete: if false;
    }
  }
}
