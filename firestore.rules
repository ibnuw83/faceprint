rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isEmployee() {
      return request.auth != null && request.auth.token.role == 'employee';
    }
    
    function isAdmin() {
      return request.auth != null && request.auth.token.role == 'admin';
    }

    match /users/{userId} {
      allow read, update: if request.auth.uid == userId || isAdmin();
      allow create: if request.auth.uid == userId;
      // Admin should not be able to delete user documents from the app
      // to prevent accidental deletion of auth accounts without direct Firebase Console access.
      allow delete: if isAdmin(); 
    }
    
    match /attendance/{docId} {
      allow create: if request.auth.uid == request.resource.data.uid;
      allow list, get: if isEmployee() || isAdmin();
    }
    
    match /departments/{docId} {
      allow read, create, update, delete: if isAdmin();
      allow get, list: if request.auth != null;
    }
    
    match /settings/{docId} {
      allow read, write: if isAdmin();
    }
    
    match /leaveRequests/{docId} {
      allow create: if request.auth.uid == request.resource.data.uid;
      allow read, list: if request.auth.uid == resource.data.uid || isAdmin();
      allow update, delete: if isAdmin();
    }
  }
}
