rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    // Checks if the user making the request is an admin based on their existing document.
    function isRequestingUserAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // --- Collections ---

    // Settings: Publicly readable for all users. Only admins can write.
    match /settings/{settingId} {
      allow read: if true;
      allow write: if isRequestingUserAdmin();
    }
    
    // Departments: All logged-in users can read. Only admins can write.
    match /departments/{departmentId} {
        allow read: if request.auth != null;
        allow write: if isRequestingUserAdmin();
    }
    
    // Users:
    // - Any logged-in user can check if a profile exists (get).
    // - Users can only create or update their own profile.
    // - Admins can do anything except create a profile for someone else (users must create their own).
    match /users/{userId} {
      allow get: if request.auth != null;
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId || isRequestingUserAdmin();
      allow list, delete: if isRequestingUserAdmin();
    }

    // Attendance: 
    // - Users can create their own records.
    // - They can read their own records.
    // - Admins can read all records and delete any record.
    match /attendance/{attendanceId} {
      allow read: if request.auth.uid == resource.data.uid || isRequestingUserAdmin();
      allow create: if request.auth.uid == request.resource.data.uid;
      allow update, delete: if isRequestingUserAdmin();
    }

    // Leave Requests:
    // - Users can create/read/update their own requests.
    // - Admins can do anything.
    match /leaveRequests/{requestId} {
      allow read: if request.auth.uid == resource.data.uid || isRequestingUserAdmin();
      allow create, update: if request.auth.uid == request.resource.data.uid || isRequestingUserAdmin();
      allow delete: if isRequestingUserAdmin();
    }
  }
}
