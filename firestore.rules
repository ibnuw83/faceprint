rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for Admin role
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Admins can read/write any user document
      // Users can read/update their own document
      allow read, update: if isAdmin() || request.auth.uid == userId;
      // Admins can delete any user
      allow delete: if isAdmin();
      // Allow user creation if the user is authenticated
      allow create: if request.auth.uid != null;
    }

    // Rules for the 'departments' collection
    match /departments/{departmentId} {
      // Admins can manage departments
      allow read, write, create, delete: if isAdmin();
    }

    // Rules for the 'attendance' collection
    match /attendance/{attendanceId} {
      // Users can create their own attendance records
      allow create: if request.auth.uid == request.resource.data.uid;
      // Admins can read/delete any attendance record
      allow read, delete: if isAdmin();
    }
    
    // Rules for the 'leaveRequests' collection
    match /leaveRequests/{leaveId} {
      // Users can create their own leave requests
      allow create: if request.auth.uid == request.resource.data.uid;
       // Users can read their own requests, Admins can read all
      allow read: if isAdmin() || request.auth.uid == resource.data.uid;
      // Admins can update or delete any request
      allow update, delete: if isAdmin();
    }

    // --- Publicly Readable Settings ---
    // These rules allow anyone, including unauthenticated users, to read
    // specific configuration documents needed for the public-facing pages.
    
    match /settings/branding {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /settings/landingPage {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /settings/footer {
      allow read: if true;
      allow write: if isAdmin();
    }
     match /settings/announcement {
      allow read: if true;
      allow write: if isAdmin();
    }

    // --- Admin-Only Settings ---
    // These settings can only be accessed by administrators.
    
    match /settings/location {
      allow read, write: if isAdmin();
    }
     match /settings/schedule {
      allow read, write: if isAdmin();
    }
  }
}
