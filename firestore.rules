
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Perusahaan: Hanya pemilik yang bisa menulis, semua pengguna terautentikasi bisa membaca
    match /companies/{companyId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == resource.data.ownerUid;
    }
    
    // Pengaturan Perusahaan: Hanya admin perusahaan yang bisa mengubah
    match /companies/{companyId}/settings/{docId} {
        allow read: if request.auth != null;
        allow write: if get(/databases/$(database)/documents/companies/$(companyId)/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Mapping User ke CompanyID: bisa dibuat saat registrasi, hanya bisa dibaca pemiliknya
    match /users/{userId} {
        allow create: if request.auth != null && request.auth.uid == userId;
        allow read, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Data di dalam perusahaan (users, attendance, etc.)
    match /companies/{companyId}/{collection}/{docId} {
        // Aturan default: Hanya bisa diakses oleh pengguna di perusahaan yang sama
        allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyId == companyId;
    }

    match /companies/{companyId}/users/{userId} {
        // Admin bisa melakukan apa saja pada pengguna di perusahaannya
        allow read, list, write, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyId == companyId && 
                                       get(/databases/$(database)/documents/companies/$(companyId)/users/$(request.auth.uid)).data.role == 'admin';
        // Pengguna bisa membaca/memperbarui data mereka sendiri
        allow read, update: if request.auth.uid == userId;
    }

    match /companies/{companyId}/attendance/{attendanceId} {
        // Admin bisa membaca semua data absensi
        allow list, read: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyId == companyId && 
                           get(/databases/$(database)/documents/companies/$(companyId)/users/$(request.auth.uid)).data.role == 'admin';
        // Karyawan bisa membuat absensi dan membaca absensi miliknya
        allow create: if request.auth != null && request.auth.uid == request.resource.data.uid;
        allow read: if request.auth.uid == resource.data.uid;
    }
    
    match /companies/{companyId}/departments/{departmentId} {
       // Admin bisa mengelola departemen
       allow read, list, write, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyId == companyId && 
                                          get(/databases/$(database)/documents/companies/$(companyId)/users/$(request.auth.uid)).data.role == 'admin';
    }

     match /companies/{companyId}/leaveRequests/{requestId} {
        // Admin bisa membaca dan memperbarui semua pengajuan
        allow read, list, update: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyId == companyId && 
                                   get(/databases/$(database)/documents/companies/$(companyId)/users/$(request.auth.uid)).data.role == 'admin';
        // Karyawan bisa membuat pengajuan dan membaca pengajuan miliknya
        allow create: if request.auth != null && request.auth.uid == request.resource.data.uid;
        allow read: if request.auth.uid == resource.data.uid;
    }

  }
}
