rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    function isEmployee() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'employee';
    }
    
    function isAdmin() {
       return exists(/databases/$(database)/documents/users/$(request.auth.uid)) && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      allow read, update, delete: if request.auth.uid == userId || isAdmin();
      allow create: if request.auth.uid != null;
      allow list: if isAdmin();
    }
    
    match /departments/{document=**} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    match /settings/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /attendance/{document=**} {
        allow create: if request.auth.uid == request.resource.data.uid;
        allow list, get: if isEmployee() || isAdmin();
        allow delete: if isAdmin();
    }

     match /leaveRequests/{document=**} {
        allow create: if request.auth.uid == request.resource.data.uid;
        allow list, get: if request.auth != null;
        allow update, delete: if isAdmin();
    }
  }
}
