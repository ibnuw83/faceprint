rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can only read/write their own document
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;

      // Admins can perform any action on any user document
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /attendance/{docId} {
      // Employees can create their own attendance records
      allow create: if request.auth != null;
      // Employees can only list their own attendance records
      allow list: if request.auth != null && request.resource.data.uid == request.auth.uid;
      // Admins can read any attendance record
      allow get, list, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /departments/{departmentId} {
        // Only admins can manage departments
        allow get, list, create, update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
        // Employees can read department list for assigning
        allow list: if request.auth != null;
    }
    
    match /leaveRequests/{requestId} {
      // Employee can create their own requests and read them
      allow create, get, list: if request.auth != null && request.auth.uid == request.resource.data.uid;
      // Admin can manage all leave requests
      allow get, list, update: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /settings/{settingId} {
      // Admins can change settings
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      // Settings are public and can be read by anyone
      allow read: if true;
    }
  }
}
