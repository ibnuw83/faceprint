
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions to check user roles from their token claims
    function isUser(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    function isAdmin() {
      // Check for a custom claim 'role' set on the user's auth token
      return request.auth != null && request.auth.token.role == 'admin';
    }
    
    // PUBLIC ACCESS: Settings can be read by anyone for the public pages.
    // WRITE ACCESS: Only admins can change settings.
    match /settings/{settingId} {
      allow read: if true;
      allow write: if request.auth != null && isAdmin();
    }

    // DEPARTMENTS: Any logged-in user can see the list of departments, but only admins can change them.
    match /departments/{departmentId} {
      allow get, list: if request.auth != null || isAdmin();
      allow write: if isAdmin();
    }

    // USERS: Users can read/update their own profile. Admins can do anything.
    match /users/{userId} {
      allow read, update: if isUser(userId) || isAdmin();
      allow create, delete, list: if isAdmin();
    }

    // ATTENDANCE: Users can create/read their own records. Admins can do anything.
    match /attendance/{attendanceId} {
      allow read: if request.auth.uid == resource.data.uid || isAdmin();
      allow create: if request.auth.uid == request.resource.data.uid;
      allow update, delete: if isAdmin();
    }

    // LEAVE REQUESTS: Users can manage their own leave requests. Admins can manage all.
    match /leaveRequests/{requestId} {
      allow read, create, update: if request.auth.uid == request.resource.data.uid || isAdmin();
      allow delete: if isAdmin();
    }
  }
}
