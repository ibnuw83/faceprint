
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // =================================
    // Helper Functions
    // =================================
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isAdmin() {
      return isAuthenticated() && getUserData().role == 'admin';
    }

    // =================================
    // Collections Rules
    // =================================

    // Settings can be read by any authenticated user but only written by admins.
    match /settings/{docId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Users can read/update their own data. Admins can manage anyone.
    // New users can create their profile. Incomplete profiles can be updated.
    match /users/{userId} {
      allow get, update: if isOwner(userId);
      allow create: if !exists(/databases/$(database)/documents/users/$(userId));
      allow write: if isAdmin(); // Covers create, update, delete for admins.

      // Allow a user to complete their own profile once.
      allow update: if isOwner(userId) && existingData().isProfileComplete == false;
    }

    // Employees can create their own attendance and read their own history.
    // Admins can read all attendance records.
    match /attendance/{docId} {
      // Allow create if the employee ID in the new document matches the user's employee ID
      allow create: if isAuthenticated() && request.resource.data.employeeId == getUserData().employeeId;
      // Allow read if admin, OR if the employee ID in the doc matches the user's employee ID
      allow read: if isAdmin() || (isAuthenticated() && resource.data.employeeId == getUserData().employeeId);
      allow delete: if isAdmin();
    }

    // Employees can create and read their own leave requests.
    // Admins can read and update (approve/reject) any leave request.
    match /leaveRequests/{docId} {
      // User must be creator of the request
      allow create: if isAuthenticated() && request.resource.data.uid == request.auth.uid;
      // User can read their own requests, admin can read all
      allow read: if isAdmin() || (isAuthenticated() && resource.data.uid == request.auth.uid);
      // Only admins can update status
      allow update: if isAdmin();
    }

    // Departments can be read by any authenticated user (needed for profile completion).
    // Only admins can manage departments.
    match /departments/{docId} {
        allow read: if isAuthenticated();
        allow write: if isAdmin();
    }
    
    // Helper function to get existing data for a document on update/delete
    function existingData() {
      return resource.data;
    }
  }
}
